@model IEnumerable<GameHub.Models.Product>

@{
    ViewData["Title"] = "Shop By Category";
}

<h1>You are Shopping: @ViewData["Category"]</h1>

@if (Model.Count() == 0) {
    <h2>Sorry, we don't have any available games in this category right now.</h2>
}

<section class="row card-group">
    @foreach (var item in Model) {
        <div class="col-lg-4 mb-3">
                <div class="card mb-3 text-center h-100">
                    <div class="card-body">
                        <h5>@item.Name</h5>
                        <p>@String.Format("{0:c}", item.Price)</p>
                        <p>@item.ReleaseYear</p>
                        @if (item.Photo != null) {
                            <img src="~/img/products/@item.Photo" class="thumb" alt="@item.Name Photo" />
                        }
                        else {
                            <img src="~/img/products/placeholder.gif" alt="Placeholder Image" />
                        }
                        <div class="mt-3">
                            <a class="btn btn-primary" asp-action="AddToCart" asp-route-id="@item.ProductId">
                                Add To Cart
                            </a>
                        </div>                       
                </div>
            </div>
        </div>
    }
</section>